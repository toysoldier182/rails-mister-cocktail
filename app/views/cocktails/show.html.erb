<div class="container mt-4">
  <h1><%= @cocktail.name %></h1>
  <%= link_to "+add ingredient", new_cocktail_dose_path(@cocktail) %>

  <h3>Ingredients</h3>
    <% @cocktail.doses.each do |dose| %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2><%= dose.description %> <%= dose.ingredient.name %></h2>
          <button id="sweet-alert-demo" class="btn btn-danger">Delete <%= dose.ingredient.name %>?</button>
          <%= link_to "", dose_path(dose), method: :delete, id: "delete-link", class: "hidden" %>
        </div>
      </div>
      <%#= link_to "delete ingredient", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, id: "delete-link", class: "hidden" %>
    <% end %>

</div>
