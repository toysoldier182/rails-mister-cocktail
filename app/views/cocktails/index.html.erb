<div class="home-banner">
  <h1>mr.joad's mocktails</h1>
  <p>
    <span id="banner-typed-text"></span>
  </p>
   <%= link_to "+Create new cocktail", new_cocktail_path, class: "btn btn-success" %>
</div>

  <div class="container">
    <h3 class="my-4 text-center">All of our cocktails</h3>
      <div class="cards">
          <% @cocktails.each do |cocktail| %>
              <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
                <%= link_to cocktail.name, cocktail_path(cocktail) %>
              </div>
          <% end %>
      </div>
    </div>

